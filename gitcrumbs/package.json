{
  "name": "gitcrumbs",
  "icon": "media/icon.png",
  "displayName": "Gitcrumbs",
  "description": "A lightweight tool for keeping track of file changes before you create a commit.",
  "publisher": "ertelek",
  "version": "1.10.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ertelek/gitcrumbs-vs-code-extension"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitcrumbs_container",
          "title": "Gitcrumbs",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "gitcrumbs_container": [
        {
          "id": "gitcrumbs.actions",
          "name": "Actions",
          "visibility": "visible"
        },
        {
          "id": "gitcrumbs.timeline",
          "name": "Snapshot Timeline"
        },
        {
          "id": "gitcrumbs.diff",
          "name": "Diff"
        },
        {
          "id": "gitcrumbs.tracking",
          "name": "Tracking"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gitcrumbs.startTracking",
          "when": "view == gitcrumbs.tracking && !gitcrumbs.isTracking",
          "group": "navigation@1"
        },
        {
          "command": "gitcrumbs.stopTracking",
          "when": "view == gitcrumbs.tracking && gitcrumbs.isTracking",
          "group": "navigation@1"
        },
        {
          "command": "gitcrumbs.openDiff",
          "when": "view == gitcrumbs.diff",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "gitcrumbs.restore",
          "when": "view == gitcrumbs.timeline"
        },
        {
          "command": "gitcrumbs.renameSnapshot",
          "when": "view == gitcrumbs.timeline && viewItem == gitcrumbs.timeline.item"
        },
        {
          "command": "gitcrumbs.setSnapshotA",
          "when": "view == gitcrumbs.timeline"
        },
        {
          "command": "gitcrumbs.setSnapshotB",
          "when": "view == gitcrumbs.timeline"
        },
        {
          "command": "gitcrumbs.openDiff",
          "when": "view == gitcrumbs.diff"
        }
      ]
    },
    "commands": [
      {
        "command": "gitcrumbs.startTracking",
        "title": "Gitcrumbs: Start Tracking"
      },
      {
        "command": "gitcrumbs.stopTracking",
        "title": "Gitcrumbs: Stop Tracking"
      },
      {
        "command": "gitcrumbs.snapshotNow",
        "title": "Gitcrumbs: Snapshot Now"
      },
      {
        "command": "gitcrumbs.restore",
        "title": "Gitcrumbs: Restore Snapshot…"
      },
      {
        "command": "gitcrumbs.next",
        "title": "Gitcrumbs: Next Snapshot"
      },
      {
        "command": "gitcrumbs.previous",
        "title": "Gitcrumbs: Previous Snapshot"
      },
      {
        "command": "gitcrumbs.openDiff",
        "title": "Gitcrumbs: Open Diff (A ↔ B)"
      },
      {
        "command": "gitcrumbs.setSnapshotA",
        "title": "Gitcrumbs: Set Snapshot A for Diffing"
      },
      {
        "command": "gitcrumbs.setSnapshotB",
        "title": "Gitcrumbs: Set Snapshot B for Diffing"
      },
      {
        "command": "gitcrumbs.clearSelection",
        "title": "Gitcrumbs: Clear A/B Selection"
      },
      {
        "command": "gitcrumbs.refreshTimeline",
        "title": "Gitcrumbs: Refresh Timeline"
      },
      {
        "command": "gitcrumbs.renameSnapshot",
        "title": "Gitcrumbs: Rename Snapshot"
      },
      {
        "command": "gitcrumbs.selectRepo",
        "title": "Gitcrumbs: Select Repository"
      }
    ],
    "configuration": {
      "title": "Gitcrumbs",
      "properties": {
        "gitcrumbs.path": {
          "type": "string",
          "default": "gitcrumbs",
          "description": "Path to the gitcrumbs CLI binary (absolute or on PATH)."
        },
        "gitcrumbs.snapshotAfter": {
          "type": "number",
          "default": 90,
          "description": "Amount of time after changes have been made before creating a snapshot when running 'gitcrumbs track'."
        },
        "gitcrumbs.restore.purgeDefault": {
          "type": "boolean",
          "default": false,
          "description": "Default purge behavior when restoring snapshots."
        },
        "gitcrumbs.repoPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the repository to use for Gitcrumbs (overrides the first workspace folder). Leave empty to use the workspace folder."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepare": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.92.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {}
}
